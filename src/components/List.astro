---
import Headline from './Headline.astro';

interface Props {
  title?: string;
}

const { title } = Astro.props;
---
 <div class="flex flex-col gap-6 relative">
  {title && (
    <Headline title={title} />
  )}

        <div class="flex flex-col gap-2">
          <slot />
        </div>
      </div>
